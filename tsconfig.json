{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "DOM",
            "ES2015"
        ],
        "paths": {
            "unity/*": [
                "*",
                "bazel-bin/*",
                "bazel-out/darwin-dbg/bin/*",
                "bazel-out/darwin-fastbuild/bin/*",
                "bazel-out/k8-dbg/bin/*",
                "bazel-out/k8-fastbuild/bin/*"
            ]
        },
        "rootDirs": [
            ".",
            "bazel-out/darwin-dbg/bin",
            "bazel-out/darwin-fastbuild/bin",
            "bazel-out/k8-dbg/bin",
            "bazel-out/k8-fastbuild/bin"
        ],
        "strict": true
    },
    "exclude": [
        "bazel-*",
        "node_modules"
    ]
}